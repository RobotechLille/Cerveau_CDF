#!/bin/sh
#
# Start extra services when not in debug mode
#

start() {
	printf "Starting extra services: "
	# TODO Charger uniquement si le jumper de DEBUG est l√†
	/etc/extra.d/rcS
	echo "OK"
}

stop() {
	printf "Stopping extra services: "
	/etc/extra.d/rcK
	echo "OK"
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|reload)
	stop
	start
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?
